// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

//Modelo User

model User {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  email       String      @unique
  password    String
  createdAt   DateTime    @default(now())
  favorites   Car[]       @relation("Favorites")
  shoppingCart ShoppingCart?
}

model Car {
  id          Int         @id @default(autoincrement())
  name        String      @unique
  brand       String
  description String
  image       String
  price       Float
  users       User[]      @relation("Favorites")
  cartItems   CartItem[]
}

model ShoppingCart {
  id          Int         @id @default(autoincrement())
  user        User        @relation(fields: [userId], references: [id])
  userId      Int         @unique
  items       CartItem[]  // Agregamos el campo opuesto sin relaci√≥n directa
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
}

model CartItem {
  id          Int         @id @default(autoincrement())
  car         Car         @relation(fields: [carId], references: [id])
  carId       Int
  quantity    Int
  shoppingCart ShoppingCart @relation(fields: [shoppingCartId], references: [id]) // Agregamos el campo opuesto
  shoppingCartId Int  // Agregamos el campo de referencia
  createdAt   DateTime    @default(now())
}


